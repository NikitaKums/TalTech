<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-md-3">
            <input class="form-control" name="search" value="@ViewBag.search"/>
        </div>
        <div class="col-md-4">
            <input type="submit" value="Search" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-danger">Reset</a>
        </div>
    </div>
</form>