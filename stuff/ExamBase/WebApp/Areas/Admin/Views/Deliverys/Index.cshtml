@using ee.itcollege.nikita.Identity
@model IEnumerable<Domain.Delivery>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@{
    bool canMakeChanges;
    try
     {
         User?.GetUserId();
         canMakeChanges = true;
     }
     catch
     {
         canMakeChanges = false;
     }
}
<p>
    @if (canMakeChanges)
    {
        <a asp-action="Create">Create New</a>
    }
    else
    {
        <p>Please login to make changes.</p>
    }
</p>
<partial name="_SearchPartial"/>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryService)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryPrice)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryPrice)
            </td>
            @if (!canMakeChanges)
            {
                <td>
                    Please login to make changes.
                </td>
            }
            else
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>   
            }
        </tr>
    }
    </tbody>
</table>