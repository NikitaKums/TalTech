@using Domain
@model OrderVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.Description" class="control-label"></label>
                <input asp-for="Order.Description" class="form-control"/>
                <span asp-validation-for="Order.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderState" class="control-label"></label>
                <select class="form-control" asp-for="Order.OrderState" asp-items="Html.GetEnumSelectList<OrderState>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Order.DeliveryId" class="control-label"></label>
                <select asp-for="Order.DeliveryId" class="form-control" asp-items="@Model.DeliverySelectList"></select>
                <span asp-validation-for="Order.DeliveryId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Order.Id"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}