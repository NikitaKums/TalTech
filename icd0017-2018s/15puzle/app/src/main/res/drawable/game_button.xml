<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#4C3366"
                android:endColor="#4C3366" />
            <corners android:radius="1dp" />
            <stroke android:width="1px" android:color="#f0a07c" />
        </shape>
    </item> <!-- pressed -->

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#616161"
                android:endColor="#616161" />
            <corners android:radius="@dimen/_1sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="#4C3366" />
        </shape>
    </item> <!-- disabled -->

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#4a274f"
                android:endColor="#4a274f" />
            <corners android:radius="1dp" />
            <stroke android:width="1px" android:color="#f0a07c" />
        </shape>
    </item> <!-- default -->

</selector>