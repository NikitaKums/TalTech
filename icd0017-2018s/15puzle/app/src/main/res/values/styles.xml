<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="gameButton"  parent="android:Widget.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/game_button</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textColor">@color/game_board_button_color</item>
        <item name="android:fontFamily">@font/d3petitbitmapism_f</item>
    </style>

    <style name="choiceButton"  parent="android:Widget.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/choice_button</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/choice_button_color</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="statisticsView"  parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textColor">@color/counter_views_color</item>
        <item name="android:fontFamily">@font/d3petitbitmapism_f</item>
    </style>

    <style name="statisticsViewWin"  parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:textColor">@color/win_message_color</item>
        <item name="android:fontFamily">@font/d3petitbitmapism_f</item>
    </style>
</resources>