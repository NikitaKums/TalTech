<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appBlack</item>
        <item name="colorPrimaryDark">@color/appBlack</item>
        <item name="colorAccent">@color/appBlack</item>
        <item name="android:textColor">@color/appOrange</item>
    </style>

    <style name="dataTextFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center|top</item>
        <item name="android:text">@string/placeholder</item>
        <item name="android:textColor">@color/appOrange</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="labelTextFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/appOrange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LayoutControlButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bottom_control_buttons</item>
        <item name="android:textColor">@color/appOrange</item>
    </style>

    <style name="bottomLayoutIMGButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:tint">@color/appOrange</item>
    </style>

    <style name="recyclerViewRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/appOrange</item>
    </style>

    <style name="notificationButtons">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>