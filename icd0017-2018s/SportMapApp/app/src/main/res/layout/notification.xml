<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:minHeight="64dp"
    android:maxHeight="64dp"
    android:orientation="horizontal"
    android:background="@color/appBlack">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <ImageButton
            android:id="@+id/imageButtonNotificationActivity"
            android:tint="@color/appOrange"
            android:layout_marginLeft="@dimen/_5sdp"
            style="@style/notificationButtons"
            android:src="@drawable/baseline_power_settings_new_white_18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNotificationTotalDistance"
                style="@style/dataTextFields"
                android:gravity="center"
                android:text="@string/placeholder" />

            <TextView
                android:id="@+id/textViewNotificationTotalTime"
                style="@style/dataTextFields"
                android:gravity="center"
                android:text="@string/placeholder" />

            <TextView
                android:id="@+id/textViewNotificationPace"
                style="@style/dataTextFields"
                android:gravity="center"
                android:text="@string/placeholder" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imageButtonNotificationCheckPointActivity"
            android:tint="@color/appOrange"
            style="@style/notificationButtons"
            android:src="@drawable/baseline_beenhere_white_18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNotificationCheckPointTotalDistance"
                style="@style/dataTextFields"
                android:gravity="center"
                android:text="@string/placeholder" />

            <TextView
                android:id="@+id/textViewNotificationCheckPointDirectDistance"
                style="@style/dataTextFields"
                android:gravity="center"
                android:text="@string/placeholder" />

            <TextView
                android:id="@+id/textViewNotificationCheckPointTime"
                style="@style/dataTextFields"
                android:gravity="center"
                android:text="@string/placeholder" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imageButtonNotificationWayPointActivity"
            style="@style/notificationButtons"
            android:tint="@color/appOrange"
            android:src="@drawable/baseline_flag_white_18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNotificationWayPointTotalDistance"
                style="@style/dataTextFields"
                android:gravity="center"
                android:text="@string/placeholder" />

            <TextView
                android:id="@+id/textViewNotificationWayPointDirectDistance"
                style="@style/dataTextFields"
                android:gravity="center"
                android:text="@string/placeholder" />

            <TextView
                android:id="@+id/textViewNotificationWayPointTime"
                style="@style/dataTextFields"
                android:gravity="center"
                android:text="@string/placeholder" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>