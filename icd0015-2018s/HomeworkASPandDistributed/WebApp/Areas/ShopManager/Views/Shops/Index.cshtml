@model IEnumerable<BLL.App.DTO.DomainLikeDTO.Shop>

@{
    ViewData["Title"] = @Resources.Views.Common.Index;
}

<div>
    <h1>@Resources.Domain.Shop.Header @Resources.Views.Common.Index</h1>
    <hr/>
    <div class="create-button-div">
        <a asp-action="Create" class="btn btn-block btn-warning disabled">@Resources.Views.Common.CreateNew</a>
    </div>
    <div class="card">
        <div class="card-body table-responsive p-0">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ShopName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShopAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShopContact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShopContact2)
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShopName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShopAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShopContact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShopContact2)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn bg-success btn-extra">
                                <i class="nav-icon fa fa-pencil"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn bg-info btn-extra">
                                <i class="nav-icon fa fa-info"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn bg-danger btn-extra disabled">
                                <i class="nav-icon fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>