@model BLL.App.DTO.DomainLikeDTO.ProductInCategory

@{
    ViewData["Title"] = @Resources.Views.Common.Delete;
}

<h1>@Resources.Domain.ProductInCategory.DeleteProductFromCategory</h1>
<hr/>
<div class="col-md-6">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">@Resources.Views.Shared._Layout.LayoutAreYouSureYouWantToDeleteThis</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Product)</label>
                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Product.ProductName)" disabled>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Category)</label>
                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Category.CategoryName)" disabled>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id"/>
                <a type="submit" value="Delete" class="btn bg-danger float-right">
                    @Resources.Views.Common.Delete <i class="nav-icon fa fa-trash"></i>
                </a>
                <a asp-action="Details" asp-route-id="@Model.CategoryId"  asp-controller="Categories" class="btn btn-default">@Resources.Views.Common.Cancel</a>
            </form>
        </div>
    </div>
</div>