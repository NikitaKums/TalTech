@model ProductWithDefectCreateViewModel

@{
    ViewData["Title"] = @Resources.Views.Common.Edit;
}

<h1>@Resources.Views.Common.Edit @Resources.Domain.ProductWithDefect.Header</h1>
<hr/>
<div>
    <div class="col-md-6">
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">@Resources.Views.Common.Edit @Resources.Domain.ProductWithDefect.Header</h3>
            </div>
            <form asp-action="Edit">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductWithDefect.Quantity" class="control-label"></label>
                        <input asp-for="ProductWithDefect.Quantity" class="form-control"/>
                        <span asp-validation-for="ProductWithDefect.Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductWithDefect.DefectRecordingTime" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                            <input asp-for="ProductWithDefect.DefectRecordingTime" class="form-control"/>
                        </div>
                        <span asp-validation-for="ProductWithDefect.DefectRecordingTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductWithDefect.Product" class="control-label"></label>
                        <select asp-for="ProductWithDefect.ProductId" class="form-control select-auto-complete" asp-items="Model.ProductSelectList"></select>
                        <span asp-validation-for="ProductWithDefect.ProductId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductWithDefect.Defect" class="control-label"></label>
                        <select asp-for="ProductWithDefect.DefectId" class="form-control select-auto-complete" asp-items="Model.DefectSelectList"></select>
                        <span asp-validation-for="ProductWithDefect.DefectId" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="ProductWithDefect.Id"/>
                    <button type="submit" class="btn bg-success float-right">
                        @Resources.Views.Common.Edit <i class="nav-icon fa fa-pencil"></i>
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.ProductWithDefect.DefectId"  asp-controller="Defects" class="btn btn-default">@Resources.Views.Common.Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}