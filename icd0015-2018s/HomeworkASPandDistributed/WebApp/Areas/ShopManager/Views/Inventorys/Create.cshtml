@model WebApp.Models.InventoryCreateViewModel

@{
    ViewData["Title"] = @Resources.Views.Common.Create;
}

<h1>@Resources.Views.Common.Create @Resources.Domain.Inventory.Header</h1>
<hr/>
<div>
    <div class="col-md-6">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">@Resources.Views.Common.CreateNew @Resources.Domain.Inventory.Header</h3>
            </div>
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Inventory.Description" class="control-label"></label>
                        <input asp-for="Inventory.Description" class="form-control"/>
                        <span asp-validation-for="Inventory.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Inventory.InventoryCreationTime" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                            <input asp-for="Inventory.InventoryCreationTime" class="form-control"/>
                        </div>
                        <span asp-validation-for="Inventory.InventoryCreationTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Inventory.Shop" class="control-label"></label>
                        <select asp-for="Inventory.ShopId" class="form-control select-auto-complete" asp-items="Model.ShopSelectList"></select>
                    </div>
                    <button type="submit" class="btn bg-warning float-right">@Resources.Views.Common.Submit</button>
                    <a asp-action="Index" class="btn btn-default">@Resources.Views.Common.Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}