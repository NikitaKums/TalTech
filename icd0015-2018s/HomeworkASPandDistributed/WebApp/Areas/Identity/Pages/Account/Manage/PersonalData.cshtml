@page
@model PersonalDataModel
@{
    ViewData["Title"] = @Resources.Identity.AccountManage.PersonalData;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@Resources.Identity.AccountManage.PersonalDataInfo</p>
        <p>
            <strong>@Resources.Identity.AccountManage.DeletingThisData</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@Resources.Views.Common.Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">@Resources.Views.Common.Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}