@page
@model ExternalLoginModel
@{
    ViewData["Title"] = @Resources.Views.Common.Register;
}

<h1>@ViewData["Title"]</h1>
<h4>@Resources.Identity.AccountManage.Associate @Model.LoginProvider @Resources.Identity.AccountManage.Account.</h4>
<hr />

<p class="text-info">
    @Resources.Identity.AccountManage.SuccessfullyAuthenticated <strong>@Model.LoginProvider</strong>.
    @Resources.Identity.AccountManage.EmailToFinishLogIn
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Resources.Views.Common.Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
